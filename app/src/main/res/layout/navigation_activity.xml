<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NavigationActivity">

    <!-- Fragments Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        android:id="@+id/main_container">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_height="?actionBarSize"
                android:layout_width="match_parent"
                app:contentInsetStart="0dp"
                app:contentInsetEnd="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:orientation="horizontal"
                        android:weightSum="20">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/menu_show"
                                android:layout_width="?attr/actionBarSize"
                                android:layout_height="?attr/actionBarSize"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_top_bars"
                                android:tint="@color/main_blue"
                                android:contentDescription="@string/show_drawer" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="18.5"
                            android:orientation="vertical"
                            android:layout_height="?actionBarSize">
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/legend_show"
                            android:layout_weight="0.5"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_outline_info"
                            android:tint="@color/main_blue" />

                        <ImageButton
                            android:id="@+id/show_tips"
                            android:layout_weight="0.5"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_baseline_help_outline_24"
                            android:tint="@color/main_blue" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.Toolbar>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:elevation="50dp"
            android:layout_gravity="bottom"
            app:labelVisibilityMode="labeled"
            app:itemTextColor="@color/bottom_nav_selector"
            app:itemIconTint="@color/bottom_nav_selector"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            android:id="@+id/left_menu">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/main_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@color/main_blue"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="?actionBarSize"
                            android:id="@+id/menu_hide"
                            android:layout_gravity="center_vertical"
                            android:layout_height="?actionBarSize"
                            android:src="@drawable/ic_arrow_back"
                            android:tint="@color/white"
                            android:background="@color/transparent"/>

                        <View
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:layout_height="0.5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginVertical="25dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="50sp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_margin="5sp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:src="@drawable/ic_round_person_24"
                                app:tint="@color/yellow_700" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="?actionBarSize"
                                    android:layout_height="wrap_content"
                                    android:text="Name: "
                                    android:textColor="@color/yellow_700"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Full Name"
                                    android:layout_marginHorizontal="10dp"
                                    android:textColor="@color/white"
                                    android:id="@+id/nameToolbar"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="?actionBarSize"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/yellow_700"
                                    android:text="User ID: "/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:id="@+id/IDToolbar"
                                    android:text="id"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>