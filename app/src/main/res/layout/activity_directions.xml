<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/directions_frag"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_blue"
    android:orientation="vertical"
    tools:context=".DirectionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/fav_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_baseline_star_border_24"
                        android:tint="@color/yellow_700" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewTo"
                        android:layout_width="318dp"
                        android:layout_height="@dimen/place"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="9dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/good_space"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="To"
                                    android:textColor="@color/main_blue"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp">

                                <fragment
                                    android:id="@+id/autocomplete_destination"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:backgroundTint="#FFF" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="55dp"
                        app:cardElevation="0dp">

                        <ImageButton
                            android:id="@+id/selectReverse"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:background="@color/transparent"
                            android:rotation="90"
                            android:src="@drawable/ic_baseline_compare_arrows_24"
                            android:tint="@color/white" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/fav_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_baseline_star_border_24"
                        android:tint="@color/yellow_700" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewFrom"
                        android:layout_width="318dp"
                        android:layout_height="@dimen/place"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="9dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/good_space"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="From"
                                    android:textColor="@color/main_blue"
                                    android:textSize="11dp" />
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardElevation="0dp">

                                <fragment
                                    android:id="@+id/autocomplete_origin"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:backgroundTint="#FFF" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="?actionBarSize"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardCornerRadius="55dp"
                        app:cardElevation="0dp">

                        <ImageButton
                            android:id="@+id/selectLocation"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:background="@color/transparent"
                            android:src="@drawable/track_location"
                            android:tint="@color/white" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:scrollbarTrackHorizontal="@color/white"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/modes"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:id="@+id/walkingMode"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_directions_walk_24"
                                android:textColor="@color/main_blue" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/drivingMode"
                            android:layout_width="@dimen/modes"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_directions_car"
                                android:textColor="@color/main_blue"
                                android:textSize="13dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/modes"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:id="@+id/lrtMode"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_railway"
                                android:textColor="@color/main_blue"
                                android:textSize="13dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/modes"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:id="@+id/busMode"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_bus"
                                android:textColor="@color/main_blue"
                                android:textSize="13dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/modes"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:id="@+id/bikeMode"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="12dp"
                                android:src="@drawable/ic_bike_facility"
                                android:textColor="@color/main_blue" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
