<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragContainerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsNewer">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    map container-->
        <fragment
            android:id="@+id/mainMapFrags"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cameraTilt="15" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

<!--    place details sheet-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/maps_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize">

            <androidx.cardview.widget.CardView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="false"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/bt_menu_show"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_top_bars"
                        android:tint="@color/black" />

                    <ImageButton
                        android:id="@+id/bt_menu_hide"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_marginLeft="-60dp"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_arrow_back"
                        android:visibility="invisible"
                        android:tint="@color/black" />

                    <!--            <TextView-->
                    <!--                android:id="@+id/search_text"-->
                    <!--                android:layout_width="0dp"-->
                    <!--                android:layout_height="match_parent"-->
                    <!--                android:layout_weight="1"-->
                    <!--                android:layout_marginLeft="20dp"-->
                    <!--                android:gravity="center_vertical"-->
                    <!--                android:text="Search"-->
                    <!--                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"-->
                    <!--                android:textColor="@color/quantum_grey" />-->

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="8dp">

                        <fragment
                            android:id="@+id/autocomplete_fragment"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            app:backgroundTint="#FFF" />

                    </androidx.cardview.widget.CardView>

                    <ImageButton
                        android:id="@+id/searchIcon"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginLeft="-50dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:elevation="2dp"
                        android:src="@drawable/search_24"
                        android:tint="@color/black" />

                    <ImageButton
                        android:id="@+id/imMyLocation"
                        android:layout_width="44dp"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="0dp"
                        android:paddingBottom="18dp"
                        android:src="@drawable/ic_top_track_location"
                        android:tint="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.Toolbar>

        <!--    sheet container-->
        <include layout="@layout/sheet_map" />


<!--            bottom sheet icon-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:tint="@android:color/white"
            app:fabSize="mini"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top|end"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_location" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

<!--    nearby stops sheet-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    nearby stops container-->
        <include layout="@layout/nearby_stations_buses" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_NearBy_Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:tint="@android:color/white"
            app:fabSize="mini"
            app:layout_anchor="@id/bottom_nearby_sheet"
            app:layout_anchorGravity="top|center"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_arrow_down" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_NearBy_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:tint="@android:color/white"
            app:fabSize="mini"
            app:layout_anchor="@id/bottom_nearby_sheet"
            app:layout_anchorGravity="top|center"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_arrow_up" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/clicked_station_sheet"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>