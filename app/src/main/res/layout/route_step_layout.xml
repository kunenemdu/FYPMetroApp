<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="2sp"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:background="@drawable/summary_border"
    android:orientation="horizontal">

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        android:layout_marginRight="10dp"
        android:background="@color/normal_green"
        android:layout_marginEnd="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="3.9"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours"
            style="@style/route_step"
            android:layout_gravity="center"
            android:id="@+id/route_step_text"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_weight="0.05"
        android:id="@+id/more_info_ride"
        android:padding="2sp"
        android:src="@drawable/ic_outline_info"
        android:layout_height="match_parent"
        app:tint="@color/normal_green" />

</LinearLayout>