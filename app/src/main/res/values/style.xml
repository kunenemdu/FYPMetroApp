<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="white_spinner" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/yellow_700</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>
</resources>